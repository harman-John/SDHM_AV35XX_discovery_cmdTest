<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avnera.test.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/text_view_connected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/start_discovery_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Start\nDiscovery"/>
        <Button
            android:id="@+id/close_discovery_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Close\nDiscovery"/>
        <Spinner
            android:id="@+id/spinner_cmdtest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UseCommandTest"
            android:entries="@array/functions"
            android:layout_gravity="center"/>
    </LinearLayout>
    <ListView
        android:id="@+id/discovery_device_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/linearLayout_cmd_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:visibility="gone">
        <Spinner
            android:id="@+id/spinner_cmd_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/function_list"/>
        <EditText
            android:id="@+id/editText_cmd"
            android:layout_width="match_parent"
            android:hint="message to send"
            android:layout_height="180dp" />
        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Send"/>
        <TextView
            android:id="@+id/textview_msg_received"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:text="message from device"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/discovery_device_list">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Start Upgrade"/>
            <Button
                android:id="@+id/button_enter_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Enter APP"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_margin="10dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Detail:"/>
    </LinearLayout>
</RelativeLayout>
